<h2>Update the movie</h2>

<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Update the movie:</h1>
            <hr>

            <form action="/movies/:id/edit" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{movie.title}}">
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Genre:</label>
                    <input type="text" class="form-control" id="genre" name="genre" value="{{movie.genre}}">
                </div>

                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot" value="{{movie.plot}}">
                </div>

                <div class="mb-3">
                    <label for="cast" class="form-label">Cast:</label>
                    <select multiple type="text" class="form-control" id="cast" name="cast" value="{{movie.cast}}">
                        {{#each celebrities}}
                        <option value={{id}}>{{name}}</option>
                        {{/each}}
                    </select>
                </div>


                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Guardar edici√≥n</button>
                </div>

            </form>
        </div>
    </div>
</div>